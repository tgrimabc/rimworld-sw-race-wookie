    <AlienRace.ThingDef_AlienRace ParentName="BaseWookiee">
        <defName>Alien_Wookiee</defName>
        <label>Wookiee</label>
        <description>Wookiees.</description>
        <statBases>
            <MarketValue>2000</MarketValue>
            <MoveSpeed>5.0</MoveSpeed>
            <Flammability>1.0</Flammability>
			<PsychicSensitivity>0.25</PsychicSensitivity>
            <ComfyTemperatureMin>-30</ComfyTemperatureMin>
            <ComfyTemperatureMax>30</ComfyTemperatureMax>
            <LeatherAmount>60</LeatherAmount>
        </statBases>
        <tools>
            <li>
                <label>left fist</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>7</power>
                <cooldownTime>1.7</cooldownTime>
                <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>40</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>right fist</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>7</power>
                <cooldownTime>1.7</cooldownTime>
                <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>40</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>1.9</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <race>
            <thinkTreeMain>Humanlike</thinkTreeMain>
            <thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
            <intelligence>Humanlike</intelligence>
            <makesFootprints>true</makesFootprints>
            <lifeExpectancy>600</lifeExpectancy>
	        <leatherDef>Wookiee_Leather</leatherDef>
    	    <meatLabel>Wookiee meat</meatLabel>
            <nameCategory>HumanStandard</nameCategory>
            <body>Human</body>
            <baseBodySize>1.25</baseBodySize>
            <baseHealthScale>1</baseHealthScale>
            <foodType>OmnivoreHuman, CarnivoreAnimal, OvivoreAnimal</foodType>
            <gestationPeriodDays>45</gestationPeriodDays>
            <litterSizeCurve>
                <points>
                    <li>(0.5, 0)</li>
                    <li>(1, 1)</li>
                    <li>(2, 1.7)</li>
                    <li>(3, 0.7)</li>
                    <li>(3.5, 0)</li>
                </points>
            </litterSizeCurve>
            <lifeStageAges>
                <li>
                    <def>WookieeBaby</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>WookieekYoungAdult</def>
                    <minAge>12</minAge>
                </li>
                <li>
                    <def>WookieeAdult</def>
                    <minAge>18</minAge>
                </li>
                <li>
                    <def>WookieePrimeAdult</def>
                    <minAge>200</minAge>
                </li>
                <li>
                    <def>WookieeMiddleAge</def>
                    <minAge>301</minAge>
                </li>
		        <li>
                    <def>WookieeOldAge</def>
                    <minAge>351</minAge>
                </li>
		        <li>
                    <def>WookieeVenerable</def>
                    <minAge>400</minAge>
                </li>
		        <li>
                    <def>WookieeElderly</def>
                    <minAge>600</minAge>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
            <specialShadowData>
                <volume>(0.3, 0.8, 0.4)</volume>
                <offset>(0,0,-0.3)</offset>
            </specialShadowData>
            <ageGenerationCurve>
                <points>
                    <li>(0,0)</li>
                    <li>(12,50)</li>
                    <li>(18,100)</li>
                    <li>(200,100)</li>
                    <li>(350,50)</li>
                    <li>(400,10)</li>
                    <li>(600,0)</li>
                </points>
            </ageGenerationCurve>
            <hediffGiverSets>
                <li>OrganicStandard</li>
                <li>Human</li>
            </hediffGiverSets>
        </race>    
        <alienRace>   
            <generalSettings>
                <humanRecipeImport>true</humanRecipeImport>
                <pawnsSpecificBackstories>true</pawnsSpecificBackstories>
                <immuneToAge>false</immuneToAge>
                <forcedRaceTraitEntries>
